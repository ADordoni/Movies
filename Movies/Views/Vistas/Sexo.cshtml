@model IEnumerable<Movies.Models.Usuario>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Sexo</title>
    </head>    
    <body>
        <div>
            <a href="/Vistas/Index">Tabla Central</a>
        </div>        
        <table class="table">
            <tr>                
                 <th>
                    Género
                </th>
                <th>
                    Cantidad de Películas
                </th>               
            </tr>
            @foreach(var Usuario in Model)
            {
              <tr>                
                <td>
                    @Usuario.genero
                </td>
                <td>
                    @Usuario.pelis
                </td>                                
              </tr>
            }
        </table>        
    </body>
</html>